{
  "defaultSeverity": "error",
  "extends": ["tslint:all", "tslint-config-prettier"],
  "rules": {
    "no-unbound-method": {
      "options": ["ignore-static"]
    },
    "typedef": [true, "call-signature", "parameter", "arrow-call-signature"],
    "no-parameter-properties": false,
    "no-implicit-dependencies": [true, "dev"],
    "max-classes-per-file": false,
    "completed-docs": [
      true,
      {
        "enums": true,
        "functions": true,
        "methods": {
          "privacies": ["public", "protected"]
        },
        "properties": {
          "privacies": ["public", "protected"]
        },
        "classes": true,
        "enum-members": true,
        "interfaces": true,
        "namespaces": true,
        "types": true,
        "variables": true
      }
    ],
    "no-magic-numbers": false,
    "no-this-assignment": false,
    "prefer-for-of": false,
    "increment-decrement": false
  },
  "rulesDirectory": []
}
